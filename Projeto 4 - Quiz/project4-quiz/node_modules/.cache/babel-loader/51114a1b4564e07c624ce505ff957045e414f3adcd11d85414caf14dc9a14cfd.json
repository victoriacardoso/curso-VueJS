{"ast":null,"code":"import ScoreBoard from './components/ScoreBoard.vue';\nexport default {\n  name: 'App',\n  components: {\n    ScoreBoard\n  },\n  data() {\n    return {\n      question: undefined,\n      incorrectAnswers: undefined,\n      correctAnswer: undefined,\n      choosenAnswer: undefined,\n      answerSubmitted: false\n    };\n  },\n  computed: {\n    answers() {\n      var answers = [...this.incorrectAnswers];\n      answers.splice(Math.round(Math.random() * answers.length), 0, this.correctAnswer);\n      return answers;\n    }\n  },\n  methods: {\n    submitAnswer() {\n      if (!this.choosenAnswer) {\n        alert(\"Pick one of the options\");\n      } else {\n        this.answerSubmitted = true;\n        this.choosenAnswer == this.correctAnswer ? console.log(\"You got it right!\") : console.log(\"You got it wrong!\");\n      }\n    },\n    getNewQuestion() {\n      this.answerSubmitted = false;\n      this.choosenAnswer = undefined;\n      this.question = undefined;\n      this.axios.get(\"https://opentdb.com/api.php?amount=1&category=18\").then(response => {\n        this.question = response.data.results[0].question;\n        this.incorrectAnswers = response.data.results[0].incorrect_answers;\n        this.correctAnswer = response.data.results[0].correct_answer;\n        console.log(response.data);\n      });\n    }\n  },\n  created() {\n    this.getNewQuestion();\n  }\n};","map":{"version":3,"names":["ScoreBoard","name","components","data","question","undefined","incorrectAnswers","correctAnswer","choosenAnswer","answerSubmitted","computed","answers","splice","Math","round","random","length","methods","submitAnswer","alert","console","log","getNewQuestion","axios","get","then","response","results","incorrect_answers","correct_answer","created"],"sources":["/home/victoriacardoso/Documentos/Estudos/Web/Front-end/curso-VueJS/Projeto 4 - Quiz/project4-quiz/src/App.vue"],"sourcesContent":["<template>\n  <div>\n    <ScoreBoard />\n\n    <template v-if=\"this.question\">\n      <h1 v-html=this.question></h1>\n      <template v-for=\"(answer, index) in this.answers\" :key=\"index\">\n        <input type=\"radio\" name=\"options\" :value=\"answer\" v-model=\"this.choosenAnswer\" :disabled=\"answerSubmitted\">\n        <label v-html=\"answer\"></label>\n        <br>\n      </template>\n      <button v-if=\"!this.answerSubmitted\" @click=\"this.submitAnswer()\" class=\"send\" type=\"button\">Send</button>\n\n      <section v-if=\"this.answerSubmitted\" class=\"result\">\n        <h4 v-if=\"this.choosenAnswer == this.correctAnswer\">\n          &#9989; Congratulations! The answer is correct.\n        </h4>\n        <h4 v-else v-html=\"'&#10060; I am sorry, you picked the wrong answer. The correct s ' +  this.correctAnswer\">\n        </h4>\n        <button @click=\"this.getNewQuestion()\" class=\"send\" type=\"button\">Next question</button>\n\n      </section>\n    </template>\n\n  </div>\n</template>\n\n<script>\nimport ScoreBoard from './components/ScoreBoard.vue';\n\nexport default {\n  name: 'App',\n  components: {\n    ScoreBoard\n  },\n  data() {\n    return {\n      question: undefined,\n      incorrectAnswers: undefined,\n      correctAnswer: undefined,\n      choosenAnswer: undefined,\n      answerSubmitted: false\n    }\n  },\n  computed: {\n    answers() {\n      var answers = [...this.incorrectAnswers];\n      answers.splice(Math.round(Math.random() * answers.length), 0, this.correctAnswer);\n      return answers;\n    }\n  },\n  methods: {\n    submitAnswer() {\n      if (!this.choosenAnswer) {\n        alert(\"Pick one of the options\");\n      }\n      else {\n        this.answerSubmitted = true;\n        this.choosenAnswer == this.correctAnswer ? console.log(\"You got it right!\") : console.log(\"You got it wrong!\")\n      }\n    },\n    getNewQuestion() {\n      this.answerSubmitted = false;\n      this.choosenAnswer = undefined;\n      this.question = undefined;\n      this.axios\n        .get(\"https://opentdb.com/api.php?amount=1&category=18\")\n        .then((response) => {\n          this.question = response.data.results[0].question;\n          this.incorrectAnswers = response.data.results[0].incorrect_answers;\n          this.correctAnswer = response.data.results[0].correct_answer;\n\n          console.log(response.data)\n        })\n    }\n  },\n  created() {\n    this.getNewQuestion();\n\n  }\n}\n</script>\n\n<style lang=\"scss\">\n#app {\n  font-family: Avenir, Helvetica, Arial, sans-serif;\n  -webkit-font-smoothing: antialiased;\n  -moz-osx-font-smoothing: grayscale;\n  text-align: center;\n  color: #2c3e50;\n  margin: 60px auto;\n  max-width: 960px;\n\n  input[type=radio] {\n    margin: 12px 4px;\n  }\n\n  button.send {\n    margin-top: 12px;\n    height: 40px;\n    min-width: 120px;\n    padding: 0 16px;\n    color: #fff;\n    background-color: #1867c0;\n    border: 1px solid #1867c0;\n    cursor: pointer;\n  }\n}\n</style>\n"],"mappings":"AA4BA,OAAOA,UAAS,MAAO,6BAA6B;AAEpD,eAAe;EACbC,IAAI,EAAE,KAAK;EACXC,UAAU,EAAE;IACVF;EACF,CAAC;EACDG,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAEC,SAAS;MACnBC,gBAAgB,EAAED,SAAS;MAC3BE,aAAa,EAAEF,SAAS;MACxBG,aAAa,EAAEH,SAAS;MACxBI,eAAe,EAAE;IACnB;EACF,CAAC;EACDC,QAAQ,EAAE;IACRC,OAAOA,CAAA,EAAG;MACR,IAAIA,OAAM,GAAI,CAAC,GAAG,IAAI,CAACL,gBAAgB,CAAC;MACxCK,OAAO,CAACC,MAAM,CAACC,IAAI,CAACC,KAAK,CAACD,IAAI,CAACE,MAAM,CAAC,IAAIJ,OAAO,CAACK,MAAM,CAAC,EAAE,CAAC,EAAE,IAAI,CAACT,aAAa,CAAC;MACjF,OAAOI,OAAO;IAChB;EACF,CAAC;EACDM,OAAO,EAAE;IACPC,YAAYA,CAAA,EAAG;MACb,IAAI,CAAC,IAAI,CAACV,aAAa,EAAE;QACvBW,KAAK,CAAC,yBAAyB,CAAC;MAClC,OACK;QACH,IAAI,CAACV,eAAc,GAAI,IAAI;QAC3B,IAAI,CAACD,aAAY,IAAK,IAAI,CAACD,aAAY,GAAIa,OAAO,CAACC,GAAG,CAAC,mBAAmB,IAAID,OAAO,CAACC,GAAG,CAAC,mBAAmB;MAC/G;IACF,CAAC;IACDC,cAAcA,CAAA,EAAG;MACf,IAAI,CAACb,eAAc,GAAI,KAAK;MAC5B,IAAI,CAACD,aAAY,GAAIH,SAAS;MAC9B,IAAI,CAACD,QAAO,GAAIC,SAAS;MACzB,IAAI,CAACkB,KAAI,CACNC,GAAG,CAAC,kDAAkD,EACtDC,IAAI,CAAEC,QAAQ,IAAK;QAClB,IAAI,CAACtB,QAAO,GAAIsB,QAAQ,CAACvB,IAAI,CAACwB